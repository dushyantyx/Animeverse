<nav class="navbar">
  <div class="container">
    <div class="nav-brand">
      <a href="/">
        <i class="fas fa-book-open"></i>
        <span>MangaVerse</span>
      </a>
    </div>

    <div class="nav-links">
      <a href="/" class="nav-link">Home</a>
      <a href="/trending" class="nav-link">Trending</a>
      <a href="/top-rated" class="nav-link">Top Rated</a>
      <a href="/manga" class="nav-link">All Manga</a>
      <a href="/discussions" class="nav-link">Discussions</a>
    </div>

    <div class="nav-actions">
      <!-- Search Form -->
      <form action="/search" method="GET" class="search-form">
        <input type="text" name="q" placeholder="Search manga..." class="search-input">
        <button type="submit" class="search-btn">
          <i class="fas fa-search"></i>
        </button>
      </form>

      <!-- User Menu -->
      <% if (currentUser) { %>
        <div class="user-menu">
          <button class="user-btn" onclick="toggleUserDropdown()">
            <i class="fas fa-user"></i>
            <span><%= currentUser.username %></span>
            <i class="fas fa-chevron-down"></i>
          </button>
          <div class="user-dropdown" id="userDropdown">
            <a href="/discussions/create">
              <i class="fas fa-plus"></i> Create Discussion
            </a>
            <a href="/auth/logout">
              <i class="fas fa-sign-out-alt"></i> Logout
            </a>
          </div>
        </div>
      <% } else { %>
        <a href="/auth/login" class="btn btn-outline">Login</a>
        <a href="/auth/signup" class="btn btn-primary">Sign Up</a>
      <% } %>
    </div>

    <!-- Mobile Menu Toggle -->
    <button class="mobile-menu-btn" onclick="toggleMobileMenu()">
      <i class="fas fa-bars"></i>
    </button>
  </div>
</nav>

<!-- Mobile Menu -->
<div class="mobile-menu" id="mobileMenu">
  <a href="/">Home</a>
  <a href="/trending">Trending</a>
  <a href="/top-rated">Top Rated</a>
  <a href="/manga">All Manga</a>
  <a href="/discussions">Discussions</a>
  <% if (currentUser) { %>
    <a href="/discussions/create">Create Discussion</a>
    <a href="/auth/logout">Logout</a>
  <% } else { %>
    <a href="/auth/login">Login</a>
    <a href="/auth/signup">Sign Up</a>
  <% } %>
</div>
