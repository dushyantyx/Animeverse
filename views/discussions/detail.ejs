<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | MangaVerse</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
  <%- include('../partials/navbar') %>
  
  <main class="main-content">
    <%- include('../partials/flash') %>
    
    <div class="container">
      <!-- Thread Header -->
      <div class="thread-detail-header">
        <div class="thread-manga-badge">
          <img src="<%= thread.manga.coverImage %>" alt="<%= thread.manga.title %>">
          <a href="/manga/<%= thread.manga._id %>"><%= thread.manga.title %></a>
        </div>
        
        <h1><%= thread.title %></h1>
        
        <div class="thread-meta-detail">
          <span><i class="fas fa-user"></i> <%= thread.user.username %></span>
          <span><i class="fas fa-clock"></i> <%= new Date(thread.createdAt).toLocaleString() %></span>
          <span><i class="fas fa-eye"></i> <%= thread.views %> views</span>
          <span><i class="fas fa-comments"></i> <%= thread.replies.length %> replies</span>
        </div>
      </div>

      <!-- Thread Content -->
      <div class="thread-content-box">
        <div class="thread-author-info">
          <div class="author-avatar">
            <%= thread.user.username.charAt(0).toUpperCase() %>
          </div>
          <div>
            <strong><%= thread.user.username %></strong>
            <span class="author-date"><%= new Date(thread.createdAt).toLocaleDateString() %></span>
          </div>
        </div>
        
        <div class="thread-content-text">
          <%= thread.content %>
        </div>

        <% if (currentUser && currentUser.id === thread.user._id.toString()) { %>
          <div class="thread-actions">
            <form action="/discussions/<%= thread._id %>?_method=DELETE" method="POST" 
                  onsubmit="return confirm('Are you sure you want to delete this discussion?')">
              <button type="submit" class="btn btn-danger btn-small">
                <i class="fas fa-trash"></i> Delete Discussion
              </button>
            </form>
          </div>
        <% } %>
      </div>

      <!-- Replies Section -->
      <div class="replies-section">
        <h2><i class="fas fa-reply"></i> Replies (<%= thread.replies.length %>)</h2>

        <% if (thread.replies.length > 0) { %>
          <div class="replies-list">
            <% thread.replies.forEach(reply => { %>
              <div class="reply-item">
                <div class="reply-author-info">
                  <div class="author-avatar small">
                    <%= reply.user.username.charAt(0).toUpperCase() %>
                  </div>
                  <div>
                    <strong><%= reply.user.username %></strong>
                    <span class="reply-date"><%= new Date(reply.createdAt).toLocaleString() %></span>
                  </div>
                </div>
                <div class="reply-content">
                  <%= reply.content %>
                </div>
              </div>
            <% }) %>
          </div>
        <% } else { %>
          <p class="no-replies">No replies yet. Be the first to respond!</p>
        <% } %>

        <!-- Reply Form -->
        <% if (currentUser) { %>
          <div class="reply-form-container">
            <h3>Add Your Reply</h3>
            <form action="/discussions/<%= thread._id %>/reply" method="POST">
              <div class="form-group">
                <textarea 
                  name="content" 
                  required 
                  rows="5" 
                  maxlength="2000"
                  placeholder="Share your thoughts..."
                ></textarea>
              </div>
              <button type="submit" class="btn btn-primary">
                <i class="fas fa-paper-plane"></i> Post Reply
              </button>
            </form>
          </div>
        <% } else { %>
          <div class="login-prompt-box">
            <p><a href="/auth/login">Login</a> to join the discussion</p>
          </div>
        <% } %>
      </div>
    </div>
  </main>

  <%- include('../partials/footer') %>
  
  <script src="/js/main.js"></script>
</body>
</html>
