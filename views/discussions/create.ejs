<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | MangaVerse</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
  <%- include('../partials/navbar') %>
  
  <main class="main-content">
    <%- include('../partials/flash') %>
    
    <div class="container">
      <div class="page-header">
        <h1><i class="fas fa-plus-circle"></i> <%= title %></h1>
        <p>Start a new discussion about manga</p>
      </div>

      <div class="form-container">
        <form action="/discussions/create" method="POST" class="discussion-form">
          <div class="form-group">
            <label for="manga">
              <i class="fas fa-book"></i> Select Manga *
            </label>
            <select name="manga" id="manga" required>
              <option value="">Choose a manga...</option>
              <% manga.forEach(m => { %>
                <option value="<%= m._id %>"><%= m.title %></option>
              <% }) %>
            </select>
          </div>

          <div class="form-group">
            <label for="title">
              <i class="fas fa-heading"></i> Discussion Title *
            </label>
            <input 
              type="text" 
              id="title" 
              name="title" 
              required 
              maxlength="200"
              placeholder="What would you like to discuss?"
            >
          </div>

          <div class="form-group">
            <label for="content">
              <i class="fas fa-align-left"></i> Content *
            </label>
            <textarea 
              id="content" 
              name="content" 
              required 
              rows="10"
              maxlength="5000"
              placeholder="Share your thoughts, theories, or questions..."
            ></textarea>
            <small class="form-hint">Maximum 5000 characters</small>
          </div>

          <div class="form-actions">
            <button type="submit" class="btn btn-primary btn-large">
              <i class="fas fa-paper-plane"></i> Create Discussion
            </button>
            <a href="/discussions" class="btn btn-outline">Cancel</a>
          </div>
        </form>
      </div>
    </div>
  </main>

  <%- include('../partials/footer') %>
  
  <script src="/js/main.js"></script>
</body>
</html>
