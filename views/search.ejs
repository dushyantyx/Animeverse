<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | MangaVerse</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
  <%- include('partials/navbar') %>
  
  <main class="main-content">
    <%- include('partials/flash') %>
    
    <div class="container">
      <div class="page-header">
        <h1><i class="fas fa-search"></i> Search Results</h1>
        <% if (query) { %>
          <p>Results for "<strong><%= query %></strong>" - Found <%= results.length %> manga</p>
        <% } else { %>
          <p>Enter a search term to find manga</p>
        <% } %>
      </div>

      <!-- Search Form -->
      <form action="/search" method="GET" class="search-page-form">
        <div class="search-input-group">
          <input 
            type="text" 
            name="q" 
            value="<%= query %>" 
            placeholder="Search by title, author, or genre..." 
            class="search-input-large"
            autofocus
          >
          <button type="submit" class="btn btn-primary">
            <i class="fas fa-search"></i> Search
          </button>
        </div>
      </form>

      <% if (results.length > 0) { %>
        <div class="search-results">
          <% results.forEach(manga => { %>
            <div class="search-result-card">
              <a href="/manga/<%= manga._id %>" class="search-result-link">
                <div class="search-result-image">
                  <img src="<%= manga.coverImage %>" alt="<%= manga.title %>">
                  <% if (manga.averageRating > 0) { %>
                    <span class="search-rating">
                      <i class="fas fa-star"></i> <%= manga.averageRating.toFixed(1) %>
                    </span>
                  <% } %>
                </div>
                <div class="search-result-content">
                  <h3><%= manga.title %></h3>
                  <p class="search-author"><i class="fas fa-pen"></i> <%= manga.author %></p>
                  <p class="search-description"><%= manga.description.replace(/<[^>]*>/g, '').substring(0, 150) %><%= manga.description.length > 150 ? '...' : '' %></p>
                  <div class="search-meta">
                    <span><i class="fas fa-book"></i> <%= manga.chapters %> chapters</span>
                    <span><i class="fas fa-signal"></i> <%= manga.status %></span>
                    <% if (manga.genres && manga.genres.length > 0) { %>
                      <span><i class="fas fa-tags"></i> <%= manga.genres.slice(0, 2).join(', ') %></span>
                    <% } %>
                  </div>
                </div>
              </a>
            </div>
          <% }) %>
        </div>
      <% } else if (query) { %>
        <div class="empty-state">
          <i class="fas fa-search"></i>
          <h2>No results found</h2>
          <p>Try searching with different keywords</p>
        </div>
      <% } %>
    </div>
  </main>

  <%- include('partials/footer') %>
  
  <script src="/js/main.js"></script>
</body>
</html>
