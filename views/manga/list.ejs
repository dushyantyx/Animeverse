<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | MangaVerse</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
  <%- include('../partials/navbar') %>
  
  <main class="main-content">
    <%- include('../partials/flash') %>
    
    <div class="container">
      <div class="page-header">
        <h1><i class="fas fa-book-open"></i> All Manga</h1>
        <p>Browse our complete collection</p>
      </div>

      <div class="manga-grid">
        <% manga.forEach(m => { %>
          <div class="manga-card">
            <a href="/manga/<%= m._id %>">
              <div class="manga-cover">
                <img src="<%= m.coverImage %>" alt="<%= m.title %>">
                <div class="manga-overlay">
                  <% if (m.averageRating > 0) { %>
                    <span class="manga-rating">
                      <i class="fas fa-star"></i>
                      <%= m.averageRating.toFixed(1) %>
                    </span>
                  <% } %>
                  <span class="manga-status <%= m.status.toLowerCase() %>">
                    <%= m.status %>
                  </span>
                </div>
              </div>
              <div class="manga-info">
                <h3><%= m.title %></h3>
                <p class="manga-author"><%= m.author %></p>
                <div class="manga-genres">
                  <% m.genres.slice(0, 2).forEach(genre => { %>
                    <span class="genre-tag"><%= genre %></span>
                  <% }) %>
                </div>
              </div>
            </a>
          </div>
        <% }) %>
      </div>

      <% if (manga.length === 0) { %>
        <div class="empty-state">
          <i class="fas fa-inbox"></i>
          <h2>No manga available</h2>
          <p>Check back later for new content!</p>
        </div>
      <% } %>
    </div>
  </main>

  <%- include('../partials/footer') %>
  
  <script src="/js/main.js"></script>
</body>
</html>
