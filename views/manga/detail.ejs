<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | MangaVerse</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
  <%- include('../partials/navbar') %>
  
  <main class="main-content">
    <%- include('../partials/flash') %>
    
    <div class="container">
      <!-- Manga Details Header -->
      <div class="manga-detail-header">
        <div class="manga-detail-cover">
          <img src="<%= manga.coverImage %>" alt="<%= manga.title %>">
        </div>
        
        <div class="manga-detail-info">
          <h1><%= manga.title %></h1>
          <p class="manga-author-large">
            <i class="fas fa-pen"></i> by <%= manga.author %>
          </p>
          
          <div class="manga-meta-large">
            <span class="meta-item">
              <i class="fas fa-circle-info"></i>
              Status: <strong><%= manga.status %></strong>
            </span>
            <span class="meta-item">
              <i class="fas fa-book"></i>
              Chapters: <strong><%= manga.chapters %></strong>
            </span>
            <span class="meta-item">
              <i class="fas fa-eye"></i>
              Views: <strong><%= manga.viewCount %></strong>
            </span>
            <% if (manga.yearPublished) { %>
              <span class="meta-item">
                <i class="fas fa-calendar"></i>
                Year: <strong><%= manga.yearPublished %></strong>
              </span>
            <% } %>
          </div>

          <div class="manga-genres-large">
            <% manga.genres.forEach(genre => { %>
              <span class="genre-tag-large"><%= genre %></span>
            <% }) %>
          </div>

          <div class="rating-section">
            <div class="rating-cards">
              <div class="rating-card">
                <h3><i class="fas fa-users"></i> Community Rating</h3>
                <div class="rating-display-large">
                  <div class="rating-score">
                    <span class="rating-number"><%= manga.averageRating.toFixed(1) %></span>
                    <div class="stars-large">
                      <% for (let i = 1; i <= 5; i++) { %>
                        <i class="fas fa-star <%= i <= Math.round(manga.averageRating) ? 'active' : '' %>"></i>
                      <% } %>
                    </div>
                    <span class="rating-count"><%= manga.ratingCount %> rating<%= manga.ratingCount !== 1 ? 's' : '' %></span>
                  </div>
                </div>
              </div>

              <% if (currentUser) { %>
                <div class="rating-card">
                  <h3><i class="fas fa-star-half-stroke"></i> Your Rating</h3>
                  <form action="/manga/<%= manga._id %>/rate" method="POST" id="ratingForm">
                    <div class="rating-form-content">
                      <select name="rating" id="rating" class="rating-select" required>
                        <option value="" <%= userRating === 0 ? 'selected' : '' %>>Choose your rating...</option>
                        <option value="1" <%= userRating === 1 ? 'selected' : '' %>>⭐ 1 Star - Poor</option>
                        <option value="2" <%= userRating === 2 ? 'selected' : '' %>>⭐⭐ 2 Stars - Fair</option>
                        <option value="3" <%= userRating === 3 ? 'selected' : '' %>>⭐⭐⭐ 3 Stars - Good</option>
                        <option value="4" <%= userRating === 4 ? 'selected' : '' %>>⭐⭐⭐⭐ 4 Stars - Very Good</option>
                        <option value="5" <%= userRating === 5 ? 'selected' : '' %>>⭐⭐⭐⭐⭐ 5 Stars - Excellent</option>
                      </select>
                      <button type="submit" class="btn btn-primary">
                        <i class="fas fa-paper-plane"></i> Submit
                      </button>
                    </div>
                    <% if (userRating > 0) { %>
                      <p class="current-user-rating">
                        <i class="fas fa-check-circle"></i> You rated: <strong><%= userRating %> star<%= userRating !== 1 ? 's' : '' %></strong>
                      </p>
                    <% } %>
                  </form>
                </div>
              <% } else { %>
                <div class="rating-card login-card">
                  <i class="fas fa-lock" style="font-size: 3rem; color: var(--accent); margin-bottom: 1rem;"></i>
                  <p><a href="/auth/login" class="btn btn-primary">Login to Rate</a></p>
                </div>
              <% } %>
            </div>
          </div>
        </div>
      </div>

      <!-- Description -->
      <section class="manga-section">
        <h2><i class="fas fa-align-left"></i> Synopsis</h2>
        <p class="manga-description"><%= manga.description %></p>
      </section>

      <!-- Discussions -->
      <section class="manga-section">
        <div class="section-header">
          <h2><i class="fas fa-comments"></i> Discussions</h2>
          <% if (currentUser) { %>
            <a href="/discussions/create?manga=<%= manga._id %>" class="btn btn-primary">
              <i class="fas fa-plus"></i> New Discussion
            </a>
          <% } %>
        </div>

        <% if (threads.length > 0) { %>
          <div class="thread-list-preview">
            <% threads.forEach(thread => { %>
              <div class="thread-preview-item">
                <div class="thread-preview-info">
                  <h4><a href="/discussions/<%= thread._id %>"><%= thread.title %></a></h4>
                  <p class="thread-meta">
                    by <strong><%= thread.user.username %></strong> • 
                    <%= new Date(thread.createdAt).toLocaleDateString() %> •
                    <i class="fas fa-eye"></i> <%= thread.views %> views •
                    <i class="fas fa-comment"></i> <%= thread.replies.length %> replies
                  </p>
                </div>
              </div>
            <% }) %>
          </div>
          <a href="/discussions?manga=<%= manga._id %>" class="btn btn-outline">
            View All Discussions <i class="fas fa-arrow-right"></i>
          </a>
        <% } else { %>
          <div class="empty-state-small">
            <p>No discussions yet. Be the first to start one!</p>
            <% if (currentUser) { %>
              <a href="/discussions/create?manga=<%= manga._id %>" class="btn btn-primary">
                Start Discussion
              </a>
            <% } %>
          </div>
        <% } %>
      </section>
    </div>
  </main>

  <%- include('../partials/footer') %>
  
  <script src="/js/main.js"></script>
</body>
</html>
